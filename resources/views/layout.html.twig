                _.push(o)};z._=[];z.set._=[];$.async=!0;$.setAttribute('charset','utf-8');
            $.src='//v2.zopim.com/?26yMcWeE6yTtZKTg8xzP15mRfyAPcchz';z.t=+new Date;$.
                    type='text/javascript';e.parentNode.insertBefore($,e)})(document,'script');
    </script>
    <!--End of Zopim Live Chat Script-->
</head>

<body>

<div class="{% block body_wrap_class %}body_wrap{% endblock %}">
{% include '_header.html.twig' %}
{% block content %}{% endblock %}

    {# FACEBOOK #}
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=376122772464948";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>

    <div id="fb-root"></div>

    {% block fb_like %}
        <div class="container">
            <div class="content" style="margin-top: 20px;margin-bottom: 10px;">
                {# FACEBOOK LIKE #}
                <div style="background-color: #ffffff; overflow: hidden;">
                    <div style="width: 470px; margin-right: 10px; float: left"><a href="/tour/taste-of-mongolia-with-naadam-festival.html"><img src="/images/banner.jpg"/></a></div>
                    <div class="fb-like-box" data-href="https://www.facebook.com/travelallmongolia" data-width="470" data-colorscheme="light" data-show-faces="true" data-header="false" data-stream="false" data-show-border="true"></div>
                </div>
            </div>
            {#<iframe src="//www.facebook.com/plugins/like.php?href=https%3A%2F%2Fwww.facebook.com%2Ftravelallmongolia&width=250&layout=standard&action=like&show_faces=true&share=true&height=80" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:250px; height:80px;" allowTransparency="true"></iframe>#}
        </div>
    {% endblock %}

    <div class="footer">
        <div class="container clearfix">

            <div class="f_col f_col_3" style="width: 140px;">
                <h3>LINKS:</h3>
                <ul>
                    <li><a href="{{ path('homepage') }}"><span>Home</span></a></li>
                    <li><a href="{{ path('page_show', {'slug':'about-us'}) }}"><span>About us</span></a></li>
                    <li><a href="{{ path('page_show', {'slug':'testimonials'}) }}"><span>Testimonials</span></a></li>
                    <li><a href="{{ path('page_show', {'slug':'terms-and-conditions'}) }}"><span>Terms & Conditions</span></a></li>
                    <li><a href="{{ path('page_show', {'slug':'privacy-policy'}) }}"><span>Privacy Statement</span></a></li>
                    <li><a href="{{ path('page_show', {'slug':'frequently-asked-questions'}) }}"><span>F.A.Q.</span></a></li>
                    <li><a href="{{ path('page_show', {'slug':'sitemap'}) }}"><span>Sitemap</span></a></li>
                </ul>
            </div>

            <div class="f_col f_col_3" style="width: 300px;">
                <h3>CULTURAL JOURNEY:</h3>
                <ul>
                    {% for slug, tour in app.content_tours.tours %}
                        {% if tour.duration is defined and tour.type is defined and tour.type == 'cultural' %}
                        <li><a href="{{ path('tour_show', {'slug' : slug}) }}"><span>{{ tour.name }} ({{ tour.duration2 }})</span></a></li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>

            <div class="f_col f_col_3" style="width: 300px;">
                <h3>ADVENTURE TOURS:</h3>
                <ul>
                    {% for slug, tour in app.content_tours.tours if tour.type is not defined %}
                        <li><a href="{{ path('tour_show', {'slug' : slug}) }}"><span>{{ tour.name }} {% if tour.duration is defined %}({{ tour.duration2 }}){% endif %}</span></a></li>
                    {% endfor %}
                </ul>
                <a href="{{ path('catalog') }}"><img src="/images/request_catalog.jpg" alt="Request a catalog"/></a>
            </div>

            <div class="f_col f_col_3" style="width: 140px;">
                <h3>CONTACT INFORMATION:</h3>
                <div class="footer_address">
                    <div class="address">
                        211-24, Rapid Kharsh, Khan uul<br>
                        Ulaanbaatar, Mongolia
                    </div>
                    <div class="hours">
                        E-Mail: info@travelallmongolia.com<br>
                        Skype: soyoloo_mongolianluxurytours
                    </div>
                    <h3 style="margin-top: 10px">OFFICE IN UNITED STATES:</h3>
                    <div class="address">
                        5201 Diamond Drive, <br/>
                        Sebring Florida, FL 33875
                    </div>
                    <a href="{{ path('contact') }}" class="notice">Send us message</a>
                </div>
            </div>
            <!--/ footer col 4 -->

            <div class="clear"></div>

            <div class="footer_social">
            </div>

            <div class="footer_contacts">
                <span class="phone">Call us: 976-99000601</span>
                <span class="email">Email: info@travelallmongolia.com</span>
            </div>

            <div class="copyright">
                COPYRIGHT &copy; 2014 <a href="http://www.travelallmongolia.com">Travel All Mongolia LLC</a>. All rights reserved.
            </div>

        </div>
    </div>
</div><!--end wrapper-->

</body>

</html>