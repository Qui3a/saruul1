{% extends 'layout.html.twig' %}

{% block content %}
    <!-- header -->
    <div class="header header_thin" style="background-image:url(/images/slider8_mini.jpg)">

        <div class="header_title">
            <strong><span>Private Customized Tours</span></strong>
        </div>

    </div>
    <!--/ header -->

    <!-- breadcrumbs -->
    <div class="middle_row row_white breadcrumbs">
        <div class="container">
            <p><a href="{{ path('homepage') }}">Home</a> <span class="separator">&rsaquo;</span>
                <span class="current">Private Customized Tours</span></p>
        </div>
    </div>
    <!--/ breadcrumbs -->

    <!-- middle -->
    <div id="middle" class="cols2">
        <div class="container clearfix">
            <!-- content -->
            <div class="content">

                <div class="entry">
                    <div class="contact_box">
                        <h2>PRIVATE CUSTOMIZED TOURS</h2>

                        <div class="box_content clearfix">
                            <form method="post" action="{{ path('private_customized_tours_send') }}">

                                {{ form_errors(form) }}

                                <div>
                                    <div class="form_col_1" style="margin-right: 30px;">
                                        <div class="row alignleft field_text">
                                            {{ form_label(form.first_name) }}
                                            {{ form_widget(form.first_name, { 'attr': {'class': 'inputField required'} }) }}
                                            {{ form_errors(form.first_name) }}
                                        </div>
                                        <div class="row alignleft field_text">
                                            {{ form_label(form.email) }}
                                            {{ form_widget(form.email, { 'attr': {'class': 'inputField required'} }) }}
                                            {{ form_errors(form.email) }}
                                        </div>
                                        <div class="row alignleft field_text">
                                            {{ form_label(form.phone_numbers) }}
                                            {{ form_widget(form.phone_numbers, { 'attr': {'class': 'inputField required'} }) }}
                                            {{ form_errors(form.phone_numbers) }}
                                        </div>
                                        <div class="row alignleft field_text">
                                            {{ form_label(form.accommodation_level) }}
                                            {{ form_widget(form.accommodation_level, { 'attr': {'class': 'select_styled', 'style':'height: 38px;width: 230px;'} }) }}
                                            {{ form_errors(form.accommodation_level) }}
                                        </div>
                                        <div class="row alignleft field_text">
                                            {{ form_label(form.tour_start_date) }}
                                            {{ form_widget(form.tour_start_date, { 'attr': {'class': 'inputField required', 'placeholder': 'mm/dd/yyyy'} }) }}
                                            {{ form_errors(form.tour_start_date) }}
                                        </div>
                                    </div>

                                    <div class="form_col_1" style="margin-right: 30px;">
                                        <div class="row alignleft field_text">
                                            {{ form_label(form.last_name) }}
                                            {{ form_widget(form.last_name, { 'attr': {'class': 'inputField required'} }) }}
                                            {{ form_errors(form.last_name) }}
                                        </div>
                                        <div class="row alignleft field_text">
                                            {{ form_label(form.nationality) }}
                                            {{ form_widget(form.nationality, { 'attr': {'class': 'inputField required'} }) }}
                                            {{ form_errors(form.nationality) }}
                                        </div>
                                        <div class="row alignleft field_text">
                                            {{ form_label(form.traveling_children) }}
                                            {{ form_widget(form.traveling_children, { 'attr': {'class': 'inputField required', 'style':'height: 34px;'} }) }}
                                            {{ form_errors(form.traveling_children) }}
                                        </div>
                                        <div class="row alignleft field_text">
                                            {{ form_label(form.budget) }}
                                            {{ form_widget(form.budget, { 'attr': {'class': 'select_styled', 'style':'height: 38px;width: 230px;'} }) }}
                                            {{ form_errors(form.budget) }}
                                        </div>
                                        <div class="row alignleft field_text">
                                            {{ form_label(form.tour_end_date) }}
                                            {{ form_widget(form.tour_end_date, { 'attr': {'class': 'inputField required', 'placeholder': 'mm/dd/yyyy'} }) }}
                                            {{ form_errors(form.tour_end_date) }}
                                        </div>
                                    </div>

                                    <div class="row alignleft field_text">
                                        {{ form_label(form.comment) }}
                                        {{ form_widget(form.comment, { 'attr': {'class': 'inputField required', 'rows': '30'} }) }}
                                        {{ form_errors(form.comment) }}
                                    </div>
                                </div>

                                <div class="form_col_1" style="margin-right: 30px;">
                                    <div class="row alignleft field_text">
                                        {{ form_label(form.preferences) }}
                                        {% for option in form.preferences %}
                                            <div>
                                                {{ form_row(option) }}
                                            </div>
                                        {% endfor %}
                                        {{ form_errors(form.preferences) }}
                                    </div>
                                </div>

                                {{ form_rest(form) }}

                                <div class="actions">
                                    <button class="btn btn-primary">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- sidebar -->
            <div class="sidebar" style="margin-top: 35px;">
                <div class="box">
                    <div style="margin: 10px;">
                        {% include 'Page/_contact_information.html.twig' %}
                    </div>
                    <!-- subscribe buttons -->
                    <div class="widget-container subscribe_btn">
                        <div>
                            <a href="{{ path('page_show', {'slug':'trip-calendar-2019'}) }}"><img
                                        src="/images/group_travel_2019.jpg" alt="Join our group travel 2019"/></a>
                        </div>
                    </div>
                    <!--/ subscribe buttons -->

                </div>
            </div>
            <!--/ sidebar -->
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ include('Tour/_tour_style.html.twig') }}
    <style>
        #middle .content {
            width: auto;
        }
    </style>
{% endblock %}