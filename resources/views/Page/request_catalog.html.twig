{% extends 'layout.html.twig' %}

{% block content %}
    <!-- header -->
    <div class="header header_thin" style="background-image:url(/images/slider8_mini.jpg)">

        <div class="header_title">
            <strong><span>Request a Catalog</span></strong>
        </div>

    </div>
    <!--/ header -->

    <!-- breadcrumbs -->
    <div class="middle_row row_white breadcrumbs">
        <div class="container">
            <p><a href="{{ path('homepage') }}">Home</a>  <span class="separator">&rsaquo;</span>
                <span class="current">Request a catalog</span></p>
        </div>
    </div>
    <!--/ breadcrumbs -->

    <!-- middle -->
    <div id="middle" class="cols2">
    <div class="container clearfix">
    <!-- content -->
    <div class="content">

    <div class="entry">
        <div class="contact_box">
            <h2>REQUEST A CATALOG</h2>

            <div class="box_content clearfix">
                <form method="post" action="{{ path('catalog_send') }}">

                    {{ form_errors(form) }}

                    <div class="form_col_1" style="margin-right: 30px;">
                        <div class="row alignleft field_text">
                            {{ form_label(form.first_name) }}
                            {{ form_widget(form.first_name, { 'attr': {'class': 'inputField required'} }) }}
                            {{ form_errors(form.first_name) }}
                        </div>
                        {#<div class="row alignleft field_text">
                            {{ form_label(form.title) }}
                            {{ form_widget(form.title, { 'attr': {'class': 'inputField required'} }) }}
                            {{ form_errors(form.title) }}
                        </div>#}
                        <div class="row alignleft field_text">
                            {{ form_label(form.country) }}
                            {{ form_widget(form.country, { 'attr': {'class': 'inputField required'} }) }}
                            {{ form_errors(form.country) }}
                        </div>
                        <div class="row alignleft field_text">
                            {{ form_label(form.city) }}
                            {{ form_widget(form.city, { 'attr': {'class': 'inputField required'} }) }}
                            {{ form_errors(form.city) }}
                        </div>
                        <div class="row alignleft field_text">
                            {{ form_label(form.address_line_2) }}
                            {{ form_widget(form.address_line_2, { 'attr': {'class': 'inputField'} }) }}
                            {{ form_errors(form.address_line_2) }}
                        </div>
                        <div class="row alignleft field_text">
                            {{ form_label(form.home_phone) }}
                            {{ form_widget(form.home_phone, { 'attr': {'class': 'inputField required'} }) }}
                            {{ form_errors(form.home_phone) }}
                        </div>
                    </div>

                    <div class="form_col_1" style="margin-right: 30px;">
                        <div class="row alignleft field_text">
                            {{ form_label(form.last_name) }}
                            {{ form_widget(form.last_name, { 'attr': {'class': 'inputField required'} }) }}
                            {{ form_errors(form.last_name) }}
                        </div>
                        {#<div class="row alignleft field_text">
                            {{ form_label(form.organization) }}
                            {{ form_widget(form.organization, { 'attr': {'class': 'inputField required'} }) }}
                            {{ form_errors(form.organization) }}
                        </div>#}
                        <div class="row alignleft field_text">
                            {{ form_label(form.zip_code) }}
                            {{ form_widget(form.zip_code, { 'attr': {'class': 'inputField required'} }) }}
                            {{ form_errors(form.zip_code) }}
                        </div>
                        <div class="row alignleft field_text">
                            {{ form_label(form.address_line_1) }}
                            {{ form_widget(form.address_line_1, { 'attr': {'class': 'inputField required'} }) }}
                            {{ form_errors(form.address_line_1) }}
                        </div>
                        <div class="row alignleft field_text">
                            {{ form_label(form.mobile_phone) }}
                            {{ form_widget(form.mobile_phone, { 'attr': {'class': 'inputField required'} }) }}
                            {{ form_errors(form.mobile_phone) }}
                        </div>
                        <div class="row alignleft field_text">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email, { 'attr': {'class': 'inputField required'} }) }}
                            {{ form_errors(form.email) }}
                        </div>
                    </div>

                    {{ form_rest(form) }}

                    <div class="actions">
                        <button class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>
        <!-- sidebar -->
        <div class="sidebar" style="margin-top: 35px;">
            <div class="box">
                <div style="margin: 10px;">
                    {% include 'Page/_contact_information.html.twig' %}
                </div>
                <!-- subscribe buttons -->
                <div class="widget-container subscribe_btn">
                    <div>
                        <a href="{{ path('page_show', {'slug':'trip-calendar-2018'}) }}"><img src="/images/group_travel_2018.jpg" alt="Join our group travel 2018"/></a>
                    </div>
                </div>
                <!--/ subscribe buttons -->

            </div>
        </div>
        <!--/ sidebar -->
        </div>
    </div>
{% endblock %}